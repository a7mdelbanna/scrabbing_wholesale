# ===========================================
# Production Environment Configuration
# ===========================================
# Copy this file to .env.production and fill in the values
# NEVER commit .env.production to version control!

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_PASSWORD=change_this_to_a_secure_password
DATABASE_URL=postgresql+asyncpg://scraper:${POSTGRES_PASSWORD}@db:5432/scraping_db

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://redis:6379/0

# ===========================================
# Security
# ===========================================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=generate_a_secure_encryption_key_here
SECRET_KEY=generate_a_secure_secret_key_here

# API Key for admin access (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
ADMIN_API_KEY=generate_admin_api_key_here

# ===========================================
# Application Settings
# ===========================================
ENVIRONMENT=production
API_ENV=production
LOG_LEVEL=INFO
DEBUG=false

# ===========================================
# Scraper Credentials
# ===========================================
# Ben Soliman
BEN_SOLIMAN_USERNAME=your_username
BEN_SOLIMAN_PASSWORD=your_password

# Tager elSaada
TAGER_ELSAADA_USERNAME=your_username
TAGER_ELSAADA_PASSWORD=your_password

# El Rabie
EL_RABIE_USERNAME=your_username
EL_RABIE_PASSWORD=your_password

# Gomla Shoaib
GOMLA_SHOAIB_USERNAME=your_username
GOMLA_SHOAIB_PASSWORD=your_password

# ===========================================
# Domain Configuration (for Nginx/SSL)
# ===========================================
DOMAIN=api.yourdomain.com
DASHBOARD_DOMAIN=dashboard.yourdomain.com

# ===========================================
# Email Notifications (Optional)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=alerts@yourdomain.com

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_PER_MINUTE=60

# ===========================================
# Export Settings
# ===========================================
EXPORT_DIR=/app/exports
MAX_EXPORT_SIZE_MB=100
